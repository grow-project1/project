@model growTests.Models.Leilao

@{

    var english = Context.Request.Cookies["language"] == "en" || Context.Request.Cookies["language"] == null;
    ViewData["Title"] = english ? "Edit Auction" : "Editar Leilão";
}

<h1>@(english ? "Edit Auction" : "Editar Leilão")</h1>

<h4>@(english ? "Auction Details" : "Detalhes do Leilão")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeilaoId" />

            <div class="form-group">
                <label asp-for="ItemId" class="control-label">@(english ? "Item" : "Item")</label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataInicio" class="control-label">@(english ? "Start Date" : "Data de Início")</label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataFim" class="control-label">@(english ? "End Date" : "Data de Fim")</label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorIncrementoMinimo" class="control-label">@(english ? "Minimum Increment" : "Incremento Mínimo")</label>
                <input asp-for="ValorIncrementoMinimo" class="form-control" />
                <span asp-validation-for="ValorIncrementoMinimo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Vencedor" class="control-label">@(english ? "Winner" : "Vencedor")</label>
                <input asp-for="Vencedor" class="form-control" />
                <span asp-validation-for="Vencedor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@(english ? "Save" : "Salvar")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@(english ? "Back to List" : "Voltar para a Lista")</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
